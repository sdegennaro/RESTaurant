<h1>Create a new user!</h1>

<%= form_for @user do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <!-- note that this is a password field, dont mess this up! -->
  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.radio_button :is_admin, 0%>Not Admin
  <%= f.radio_button :is_admin, 1%>Admin
  <!-- <%= f.radio_button :is_admin, "Admin", :checked => "1" %> -->

  <%= f.submit %>
<% end %>
